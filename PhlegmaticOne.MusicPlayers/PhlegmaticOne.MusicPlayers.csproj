<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>MusicPlayer</Title>
    <Authors>Phlegmatic</Authors>
    <Description>Music player implementation</Description>
    <PackageProjectUrl>https://github.com/PhlegmaticOne/PhlegmaticOne.MusicPlayers</PackageProjectUrl>
    <PackageIcon>Logo - Copy.png</PackageIcon>
    <RepositoryUrl>https://github.com/PhlegmaticOne/PhlegmaticOne.MusicPlayers.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Music;Player;MusicPlayer;Songs;Tracks;Song;Track;</PackageTags>
    <PackageReleaseNotes>Added music player implementation</PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\..\Downloads\Logo - Copy.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NAudio.Wasapi" Version="2.1.0" />
  </ItemGroup>

</Project>
